<div class="container">
  <%= form_for(@bookmark) do |f| %>
    <% if @bookmark.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

        <ul>
        <% @bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :url %><br>
      <%= f.text_field :url, class: 'form-control', "v-model": "url", "v-on:change": "urlChanged" %>
    </div>
    <div class="field form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control', "v-model": "title" %>
    </div>

    <div class="well">
      <div class="row">
        <div class="col-md-3">
          <p v-if='image'>
            <img v-bind:src="image" width="100%"/>
          </p>
          <%= f.hidden_field :image, "v-model": "image" %>
        </div>
        <div class="col-md-9">
          <p v-if='paragraph'>
            {{paragraph}}
          </p>
          <%= f.hidden_field :paragraph, "v-model": "paragraph" %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-default'%>
    </div>
  <% end %>

</div>
